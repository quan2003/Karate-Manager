{
  "name": "karate-tournament-manager",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "main": "electron.cjs",
  "author": "Karate Tournament",
  "description": "Phần mềm quản lý giải đấu Karate - Bốc thăm tự động",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build:win": "npm run build && electron-builder --win --x64",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:all": "npm run build && electron-builder -mwl",
    "electron:build:dir": "npm run build && electron-builder --win --x64 --dir",
    "deploy-server": "scp license-server/server.js root@103.82.194.186:/root/karate-license-server/ && ssh root@103.82.194.186 \"pm2 restart all\""
  },
  "dependencies": {
    "dom-to-image-more": "^3.7.2",
    "electron-updater": "^6.8.3",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.2.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.karate.tournament.manager",
    "productName": "Karate Tournament Manager",
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "quan2003",
        "repo": "Karate-Manager"
      }
    ],
    "files": [
      "dist/**/*",
      "electron.cjs",
      "preload.cjs",
      "public/**/*",
      "kata-scoreboard/**/*",
      "kumite-scoreboard/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Karate Tournament"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.sports"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
